<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F3C6"
    tools:context=".activity.UyeProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="PROFİLİM"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:rowCount="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Üye Numarası:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uyeProfilUyeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Üye ID"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Adı:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/uyeProfilUyeAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Ad"
                android:maxLength="20"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Soyadı:"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/uyeProfilUyeSoyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Soyad"
                android:maxLength="20"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Telefon:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/uyeProfilUyeTelefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Telefon"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Kullanıcı Adı:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/uyeProfilUyeKullaniciAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Kullanıcı Adı"
                android:maxLength="20"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Şifre:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/uyeProfilUyeSifre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="#474646"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginBottom="20dp"
                android:gravity=""
                android:text="Favori Kitap Türleriniz"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:text="Favori1:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uyeProfilUyeFavori1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Favori1"
                android:textColor="#474646"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/uyeProfilFavoriSec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:text="Favori2:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uyeProfilUyeFavori2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Favori2"
                android:textColor="#474646"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/uyeProfilFavoriSec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                android:text="Favori3:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/uyeProfilUyeFavori3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:hint="Favori3"
                android:textColor="#474646"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/uyeProfilFavoriSec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="2" />
        </GridLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#AB4CAF50"
            android:onClick="uyeGuncelle"
            android:text="Güncelle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#85F11616"
            android:onClick="UyeligiSil"
            android:text="Üyeliği iptal et" />

    </LinearLayout>

</ScrollView>