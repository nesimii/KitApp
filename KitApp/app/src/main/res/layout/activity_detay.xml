<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activity.DetayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detayActivityİmageKitapResim"
                android:layout_width="169dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:clickable="false" />

            <Button
                android:id="@+id/detayActivityButtonResimSec"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#4CAF50"
                android:onClick="butonResimSec"
                android:text="Yeni Resim Seç"
                android:visibility="gone" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Kitap Adı: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextKitapAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="50"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Yazarı: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextYazari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="50"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:text="Kategori: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detayActivityTextViewKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:text="kategori"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/detayActivitySpinnerKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Sayfa Sayısı: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextSayfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="5"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Baskı: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextBaski"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="10"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="ISBN: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="50"
                android:text=""
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:text="Özet: "
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detayActivityEditTextOzet"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="3dp"
                android:enabled="false"
                android:maxLength="500"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textSize="17sp"
                android:textStyle="bold" />
        </GridLayout>

        <Button
            android:id="@+id/detayActivityButtonKitapDuzenle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#4CAF50"
            android:onClick="butonKitapDuzenle"
            android:text="Düzenle"
            android:visibility="gone" />

        <Button
            android:id="@+id/detayActivityButtonKitapKaydet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#4CAF50"
            android:onClick="butonKitapKaydet"
            android:text="Kaydet"
            android:visibility="gone" />

        <Button
            android:id="@+id/detayActivityButtonKitapSil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="#F44336"
            android:onClick="butonKitapSil"
            android:text="Kitabı Sil"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>